.user-img {
  width: 90rpx;
  height: 90rpx;
  border-radius: 100rpx;
  border-style: solid;
  border-width: 1rpx;
  border-color: rgb(207, 207, 209);
  vertical-align: middle;
}

.follow_button {
  background-color: rgb(236, 236, 236);
  vertical-align: middle;
  border-radius: 10rpx;
  margin-right: 13rpx;
  margin-top: 7rpx;
  width: 120rpx;
  height: 60rpx;
  text-align: center;
  float: right;
}

.follow_button .text {
  font-family: 黑体;
  font-size: 13px;
  font-weight: bold;
  color: rgb(94, 94, 228);
  vertical-align: middle;
}

.subicon {
  height: 35rpx;
  width: 35rpx;
  text-align: center;
}

.subtext {
  font-size: 20rpx;
  text-align: center;
  color: grey;
}

.icontext1 {
  display: flex;
  flex-direction: column;
  text-align: center;
  margin-left: 20rpx;
  margin-top:4rpx;
  margin-bottom:4rpx;
}

.icontext2 {
  float: right;
  margin-left: auto;
  margin-right: 15rpx;
